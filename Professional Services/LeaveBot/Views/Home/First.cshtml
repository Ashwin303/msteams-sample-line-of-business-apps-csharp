
<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/b"></script>
    <title></title>
    <style>
        * {
            font-size: 17px;
            font-family: 'Times New Roman', Times, serif;
        }

        .container {
            background-color: #f5f5f5;
            width: 100%;
            height: 100%;
        }

        .panel-group {
            width: 100%;
            opacity: 1.5;
            border: 10px solid transparent;
            display: block;
            margin: 10px auto;
            border: 1px solid transparent;
        }

        .heading {
            background-color: white;
            padding: 10px 0px;
            border-bottom: 1px black
        }

        .body {
            background-color: #f5f5f5;
            padding: 5px;
            width: 100%
        }

        .one {
            left: 0;
        }

        .two {
            padding-left: 300px;
        }

        .three {
            padding-left: 300px;
        }

        .colored {
            border: 1px solid rgba(0,0,0,.15);
            padding: 0px;
            width: 100%;
        }

        table {
            width: 100%;
        }

        th, td {
            padding: 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div>
            <br />
            <br />
            <p style="color:black;font-size:20px;">
                Public Holidays 2018
                @*<span style="float:right;padding-right:60px;" class="glyphicon glyphicon-calendar"></span>
                    <span style="float:right;padding-right:70px;" class="glyphicon glyphicon-list"></span>*@
            </p>

        </div>
        <div class="panel-group">
            <div class="body">
                <table rules="none" border="0" cellpadding="20" cellspacing="20">
                    <thead>
                        <tr style="opacity:0.7">
                            <th style="padding:15px">
                                Date
                            </th>
                            <th style="padding:15px">
                                Day
                            </th>
                            <th style="padding:15px">
                                Event
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Microsoft.Teams.Samples.HelloWorld.Web.Models.PublicHolidaysList.HolidayList)
                        {
                            <tr style="background-color:white;border-top:1px solid rgba(0,0,0,.15)">
                                <td>
                                    @item.Date.ToString("dd MMMM yyyy")
                                </td>
                                <td>
                                    @item.Date.DayOfWeek
                                </td>
                                <td>
                                    @item.Title
                                </td>

                            </tr>

                        }

                    </tbody>
                </table>
            </div>


        </div>
    </div>
</body>
</html>