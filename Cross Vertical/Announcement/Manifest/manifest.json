{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.3/MicrosoftTeams.schema.json",
  "manifestVersion": "1.3",
  "version": "1.0.0",
  "id": "d1f8b545-be28-445f-8e4c-fc9fc2a87988",
  "packageName": "com.industrydemo.company.communicator",
  "developer": {
    "name": "Industry Demo Team",
    "websiteUrl": "https://www.microsoft.com",
    "privacyUrl": "https://www.microsoft.com/privacy",
    "termsOfUseUrl": "https://www.microsoft.com/termsofuse"
  },
  "name": {
    "short": "MyDebug Company Communicator",
    "full": "Company Communicator app for Microsoft Teams"
  },
  "description": {
    "short": "Company Communicator app for Microsoft Teams",
    "full": "This sample Company Communicator app which demos communication flow. You can extend this to add more content and capabilities."
  },
  "icons": {
    "outline": "outline.png",
    "color": "color.png"
  },
  "accentColor": "#60A18E",
  "staticTabs": [
    {
      "entityId": "com.contoso.Announcement.history",
      "name": "My Messages",
      "contentUrl": "https://6ddc342d.ngrok.io/history?tid={tid}&emailId={loginHint}",
      "websiteUrl": "https://6ddc342d.ngrok.io/history",
      "scopes": [
        "personal"
      ]
    }
  ],
  "bots": [
    {
      "botId": "d1f8b545-be28-445f-8e4c-fc9fc2a87988",
      "needsChannelSelector": false,
      "isNotificationOnly": false,
      "supportsFiles": true,
      "scopes": [
        "personal",
        "team"
      ],
      "commandLists": [
        {
          "scopes": [
            "personal",
            "team"
          ],
          "commands": [
            {
              "title": "help",
              "description": "Disaplys options available with Company Communicator Bot"
            }
          ]
        }
      ]
    }
  ],
  "composeExtensions": [
    {
      "botId": "d1f8b545-be28-445f-8e4c-fc9fc2a87988",
      "commands": [
        {
          "id": "getMyAnnouncements",
          "description": "Gets all the announcements sent to me.",
          "title": "Get some random text for fun",
          "initialRun": true,
          "parameters": [
            {
              "name": "cardTitle",
              "description": "Card title to use",
              "title": "Card title"
            }
          ]
        }
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [ "*.botframework.com" ]
}
